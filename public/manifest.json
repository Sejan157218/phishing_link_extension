{
  "manifest_version": 3,
  "name": "Current Domain Viewer",
  "version": "1.0",
  "description": "Displays the current domain of the active tab.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  }
}

